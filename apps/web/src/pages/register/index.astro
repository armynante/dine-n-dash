---
import Layout from "../../layouts/Layout.astro";
import BasicInput from "../../components/inputs/BasicInput.astro";
import Primary from "../../components/Buttons/Primary.astro";
import axios from "axios";

---
<Layout title="Home">
  <main class="px-48 pt-12">
    <div class="grid grid-cols-12 gap-24 ">
      <div class="col-span-6 outline-1 outline">
        <div class="flex flex-col px-40 py-12 space-y-6">
          <h1 class="text-4xl font-bold text-center uppercase mb-12">
            Sign Up to Dash
          </h1>
          <form 
            hx-post='/register/auth'
          >
            <BasicInput
              type="email"
              label="email"
              name="email"
              reminder="Already have an account?"
              link="/login"
            />
            <BasicInput type="password" name="password" label="password"  />
            <BasicInput
              type="password"
              name="confirm"
              label="confirm password"
            />

            <div class="mt-16">
              <Primary type="submit" label="Login"/>
            </div>
            
          </form>
        </div>
      </div>
      <div class="col-span-6 outline-1 outline">
        <img src="/running-man.png" class="h-full w-full"/>
      </div>
    </div>
  </main>
</Layout>
