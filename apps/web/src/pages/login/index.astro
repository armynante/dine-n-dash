---
import Layout from "../../layouts/Layout.astro";
import BasicInput from "../../components/inputs/BasicInput.astro";
import Primary from "../../components/Buttons/Primary.astro";

---

<Layout title="Login">
  <main class="px-48 pt-12">
    <div class="grid grid-cols-12 gap-24 ">
      <div class="col-span-6 outline-1 outline">
        <div class="flex flex-col px-40 py-12 space-y-14">
          <h1 class="text-4xl font-bold text-center uppercase">
            Welcome back
          </h1>
          <form 
            hx-post='/login/auth'
          >
            <BasicInput
              type="email"
              label="email"
              name="email"
              reminder="Don't have an account?"
              link="/register"
            />
            <BasicInput name="password" type="password" label="password" reminder="Forgot your password?" id="#loading"/>
            <div class="mt-16">
              <Primary type="submit" label="Login"/>
            </div>

            
          </form>
        </div>
      </div>
      <div class="col-span-6 outline-1 outline">
        <img src="/running-man.png" class="h-full w-full"/>
      </div>
    </div>
  </main>
</Layout>