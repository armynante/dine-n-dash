---
import Loader from '../Loader.astro'
const { label, disabled } = Astro.props;

---
<button  hx-disabled-elt={disabled ?? "this"} class="bg-black text-white grid grid-cols-3 w-full outline p-2 outline-white hover:outline-2 hover:outline-black hover:bg-slate-400 active:bg-slate-600  text-2xl">
      <div id="indicate" class='htmx-indicator col-span-1 place-self-end'>
        <Loader classData={'fill-white'} />
      </div>
      <div class="col-span-1">
        {label}
      </div>
      <div class="col-span-1">
      </div>
</button>